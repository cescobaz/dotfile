export PATH=$HOME/.local/bin:$PATH
export EDITOR='vim'
export TOREMOVE="$HOME/toremove"

export QT_QPA_PLATFORMTHEME=qt5ct

# ripgrep
export RIPGREP_CONFIG_PATH="$HOME/.ripgrep"
# fzf
export FZF_DEFAULT_COMMAND="fd --type f"
export FZF_DEFAULT_OPTS="--layout=reverse --history=$HOME/.fzf_history --color='fg:07,bg:0,preview-fg:07,preview-bg:0,hl:03,fg+:10,bg+:19,gutter:00,hl+:03,info:08,border:00,prompt:07,pointer:02,marker:02,spinner:07,header:03' --no-bold"

# Base16 Shell
BASE16_SHELL="$HOME/.config/base16-shell/"
[ -n "$PS1" ] && \
    [ -s "$BASE16_SHELL/profile_helper.sh" ] && \
        eval "$("$BASE16_SHELL/profile_helper.sh")"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
